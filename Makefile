# **************************************************************************** #
#                                    Config                                    #
# **************************************************************************** #

MAKE = make
SHELL = bash

# **************************************************************************** #
#                                    Names                                     #
# **************************************************************************** #

NAME = so_long

# **************************************************************************** #
#                                    Paths                                     #
# **************************************************************************** #

MLX_PATH		= ./Libs/mlx-minilibx/minilibx-linux/
MLX_NAME		= libmlx_Linux.a
MLX					= $(MLX_PATH)$(MLX_NAME)

LIBFT_PATH	=	./Libs/42_Libft/
LIB_NAME	= libft.a

SRC_PATH        = .
INC_PATH        = .

FILES           = ft_printf.c

SRC             = $(addprefix $(SRC_PATH)/, $(FILES))
OBJS            = $(SRC:%.c=%.o)

# **************************************************************************** #
#                                   Compiler                                   #
# **************************************************************************** #

CC              = cc
CFLAGS          = -Wall -Wextra -Werror -g
MLXFLAGS				= -L ./lib/minilibx-linux -lm -lmlx -Ilmlx -lXext -lX11
MLXFLAGS				= -L . -lm -lmlx -Ilmlx -lXext -lX11
INC             = -I $(INC_PATH)

# **************************************************************************** #
#                                   Commands                                   #
# **************************************************************************** #

RM              = rm -rf

# **************************************************************************** #
#                                    Rules                                     #
# **************************************************************************** #
 
all: $(BUILD_PATH) $(NAME)

$(NAME): $(OBJS)
	$(AR) $(NAME) $(OBJS)

%.o: %.c
	$(CC) $(CFLAGS) $(INC) -c $< -o $@

clean:
	    $(RM) $(OBJS)

fclean: clean
	 $(RM) $(NAME)
    
re: fclean all
